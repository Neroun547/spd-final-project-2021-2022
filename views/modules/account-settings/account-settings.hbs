<div class="wrapper__account-settings wrapper__about">
    <div class="account__settings-avatar">
        {{#if idAvatar}}
            <img src="/account-settings/avatar/{{idAvatar}}">
        {{else}}
            <img src="/img/user.png">
        {{/if}}
    </div> 
    <form action="/account-settings/upload-avatar" method="POST" enctype="multipart/form-data" class="account__settings-form">
        <input type="file" name="file" data-role="file" data-button-title="<span class='mif-folder'></span>" required>
        <button type="submit" class="account__settings-upload-avatar-btn">Upload avatar</button>
    </form>
    <div class="account__settings-block">
        <div class="account__settings-block-item">
            <h2>Name user: </h2>
            <span>{{name}}</span>
            <a href="/account-settings/change-name">
                <button class="button primary">Change</button>
            </a>
        </div>
        <div class="account__settings-block-item">
            <h2>Username: </h2>
            <span>{{username}}</span>
            <a href="/account-settings/change-username">
                <button class="button primary">Change</button>
            </a>
        </div>
        <div class="account__settings-block-item">
            <h2>Email: </h2>
            <span>{{email}}</span>
            <a href="/account-settings/change-email">
                <button class="button primary">Change</button>
            </a>
        </div>
        <div class="account__settings-block-item">
            <a href="/account-settings/change-password" class="link-change-password">
                <button class="button primary btn-change-password">Change password</button>
            </a>
        </div>
        <div class="account__settings-block-item">
            <button id="delete-account-btn">Delete account</button>
        </div>
    </div>
</div>